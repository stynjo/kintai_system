<% provide(:button_text, '拠点地編集') %>
<h1>拠点情報の修正</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @base, local: true) do |f| %>
    
      <%= f.label :拠点地番号, class: "form-edit-label" %>
      <%= f.text_field :number, class: "form-control" %>
  
      <%= f.label :拠点地, class: "form-edit-label" %>
      <%= f.text_field :name, class: "form-control" %>
  
      <%= f.label :拠点種類, class: "form-edit-label" %>
      <%= f.text_field :type, class: "form-control" %>
    
      <%= f.submit "更新", class: "btn btn-primary form-control btn-Base-edit" %>
    <% end %>
  </div>
</div>